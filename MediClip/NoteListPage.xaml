<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediClip.NoteListPage"
             Title="Notes">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Menu"
                     Icon="HamburgerIconWhite.png"
                     Priority="1"
                     Name="Menu"
                     Order="Primary"
                     Activated="Handle_Activated" />
        <ToolbarItem Text="Add Note"
                     Priority="0"
                     Name="Add Note"
                     Activated="AddNote_Clicked" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="List of notes will be displayed here."
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="8"
               FontAttributes="Bold"
               FontSize="Medium" />
        <!--<Button Text="Add Note"
                BackgroundColor="#127c54"
                TextColor="White"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="150"
                Clicked="AddNote_Clicked"/>-->
    </StackLayout>
</ContentPage>