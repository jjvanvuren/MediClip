<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MediClip.MenuPage"
             Title="Menu">

    <!--Displayed when hamburger menu is tapped-->
    <StackLayout>
        <Label Text="Select menu option below:"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               Margin="0,20,0,0" />
        
        <!--Returns to HomePage-->
        <Button Text="Home Page"
                BackgroundColor="#127c54"
                TextColor="White"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="150"
                Clicked="ReturnHome_Clicked" />

        <!--Logout the user-->
        <Button Text="Logout"
                BackgroundColor="#127c54"
                TextColor="White"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                WidthRequest="150"
                Clicked="Logout_Clicked" />
        
    </StackLayout>
</ContentPage>